{
  "$schema": "./appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Umbraco": {
    "CMS": {
      "Content": {
        "MacroErrors": "Silent"
      },
      "Hosting": {
        "Debug": false
      },
      "RuntimeMinification": {
        "UseInMemoryCache": true,
        "CacheBuster": "AppDomain"
      }
    }
  },
  "MessagingSettings": {
    "EndpointSettings": [
      {
        "Enabled": false,
        "EndpointType": "Topic",
        "EntityName": "Member",
        "EntityEventName": "MemberEvent",
        "RateLimitSettings": {
          "Enabled": true,
          "RateLimit": 5,
          "RateLimitPeriod": 60
        },
        "ConcurrencyLimitSettings": {
          "Enabled": true,
          "ConcurrencyLimit": 1
        }
      },
      {
        "Enabled": false,
        "EndpointType": "Topic",
        "EntityName": "Product",
        "EntityEventName": "ProductEvent",
        "RateLimitSettings": {
          "Enabled": true,
          "RateLimit": 5,
          "RateLimitPeriod": 60
        },
        "ConcurrencyLimitSettings": {
          "Enabled": true,
          "ConcurrencyLimit": 1
        }
      }
    ]
  }
}