@using WRA.Umbraco.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<CheckoutStepPage>

<div class="d-flex flex-column justify-content-between flex-sm-row mt-4">
    @if (Model.CanGoBack) 
    {
        if (Model.PreviousStep != null)
        {
            <a class="btn btn-light px-0" href="@Model.PreviousStep.Url()">
                <i class="fa fa-chevron-left me-2" width="16" height="16" aria-hidden="true"></i>
                Return to @Model.PreviousStep.Name
            </a>
        }
        else
        {
            <a class="btn btn-light px-0" href="@Model.CartPage.Url()">
                <i class="fa fa-chevron-left me-2" width="16" height="16" aria-hidden="true"></i>
                Return to Cart
            </a>
        }
    }
    @if (Model.NextStep != null)
    {
        <button class="btn btn-primary" type="submit">Continue to @Model.NextStep.Name</button>
    }
</div>