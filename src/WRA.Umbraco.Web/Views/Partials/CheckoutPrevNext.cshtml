@using WRA.Umbraco.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<CheckoutStepPage>

<div class="d-flex flex-column align-items-center justify-content-between flex-sm-row mt-4">
    @if (Model.CanGoBack) 
    {
        if (Model.PreviousStep != null)
        {
            <a class="btn btn-light" href="@Model.PreviousStep.Url()">
                <i class="fa fa-chevron-left me-2" width="16" height="16" aria-hidden="true"></i>
                Return to @Model.PreviousStep.ShortStepName
            </a>
        }
        else
        {
            <a class="btn btn-light" href="@Model.CartPage.Url()">
                <i class="fa fa-chevron-left me-2" width="16" height="16" aria-hidden="true"></i>
                Return to Cart
            </a>
        }
    }
    @if (Model.NextStep != null)
    {
        if (Model.NextStep.ShortStepName == "Review")
        {
            <button class="btn btn-primary js-payment-validation" type="submit" disabled>Continue to @Model.NextStep.ShortStepName</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Continue to @Model.NextStep.ShortStepName</button>
        }
    }
</div>