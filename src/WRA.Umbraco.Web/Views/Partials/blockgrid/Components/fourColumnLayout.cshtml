@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using Umbraco.Cms.Core.Models.Blocks;
@using ContentModels = WRA.Umbraco.Models;

@{
    var content = (ContentModels.FourColumnLayout)Model.Content;
    string className = "block-4-col-layout container";

    if (content.HasValue("additionalCssClasses"))
    {
        className += $" {content.AdditionalCssClasses}";
    }
}

<div class="@Html.Raw(className.Trim())">
    <div class="row g-3 g-md-4">
        <div class="col-6 col-lg-3">
            @await Html.GetBlockGridItemAreaHtmlAsync(Model, "four-column-1")
        </div>
        <div class="col-6 col-lg-3">
            @await Html.GetBlockGridItemAreaHtmlAsync(Model, "four-column-2")
        </div>
        <div class="col-6 col-lg-3">
            @await Html.GetBlockGridItemAreaHtmlAsync(Model, "four-column-3")
        </div>
        <div class="col-6 col-lg-3">
            @await Html.GetBlockGridItemAreaHtmlAsync(Model, "four-column-4")
        </div>
    </div>
</div>



