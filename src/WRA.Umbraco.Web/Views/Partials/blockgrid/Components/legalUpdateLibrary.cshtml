@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>;
@using ContentModels = WRA.Umbraco.Models;

@{
    var query = Context.Request.Query;
    var legalUpdates = UmbracoContext.Content.GetAtRoot().DescendantsOrSelfOfType("legalUpdates").Where(x => x.IsVisible());
    var topicGroups = UmbracoContext.Content.GetAtRoot().DescendantsOrSelfOfType("legalUpdateGroups").Where(x => x.IsVisible());

    string filterType = query["filterType"];
}

<div class="container">
    <div class="row">
        <div class="col-12 col-lg-3">
            @if (filterType == "year")
            {
                <h2 class="h3">Years</h2>
                @foreach (var legalUpdate in legalUpdates)
                {
                    var years = UmbracoContext.Content.GetAtRoot().DescendantsOrSelfOfType("dateFolder").Where(x => x.Parent.Name == legalUpdate.Name).Where(x => x.IsVisible());

                    <label for="legal-updates-year-filter" class="visually-hidden">Filter by year</label>
                    <select id="legal-updates-year-filter" class="form-select">
                        @foreach (var year in years)
                        {
                            <option value="@year.Name">Legal Updates @year.Name</option>
                        }
                    </select>
                }
            }
            else
            {
                <h2 class="h3">Topics</h2>
                <div class="accordions-wrapper">
                    @foreach (var group in topicGroups)
                    {
                        var topics = UmbracoContext.Content.GetAtRoot().DescendantsOrSelfOfType("legalUpdateTopic").Where(x => x.Parent.Name == group.Name).Where(x => x.IsVisible());

                        <details class="accordion border-bottom">
                            <summary class="accordion__toggle">
                                @group.Name
                                <div class="accordion__toggle-icon">
                                    <i class="fas fa-chevron-down"></i>
                                    <i class="fas fa-chevron-up"></i>
                                </div>
                            </summary>
                            <div class="accordion__content pb-0">
                                @foreach (var topic in topics)
                                {
                                    <div class="form-check py-2 border-top fs-sm">
                                        <!input id="@group.Name-@topic.Name" class="form-check-input" type="radio" name="legal-update-topic" value="@topic.Name" />
                                        <label for="@group.Name-@topic.Name" class="form-check-label">
                                            @topic.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        </details>
                    }
                </div>
            }
        </div>
        <div class="col-12 col-lg-9">
            @for (var i = 1; i <= 5; i++)
            {
                <div class="mb-4 p-4 bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <strong>June 2022 Legal Update: Trust Accounts: Unclaimed Earnest Money</strong>
                        <strong class="fs-xs">
                            Published <time datetime="2023-10-09">10/9/2023</time>
                        </strong>
                    </div>
                    <div class="my-2 fs-sm">
                        Acceptance, Addendum to Listing Contract, Agency, Broker Responsibilities under WI Law, Buyer Agency, Code of Ethics, Designated Agency, Duties Owed by Brokers, Earnest Money, Email Issues , Email Issues, Fair Housing Law, Forms, Forms Revisions, Listing Protection, Real Estate Condition Report, Residential Listing Contract, Sex Offenders, Termination of Agency Relationships, WB-36, Acceptance, Addendum to Listing Contract, Agency, Broker Responsibilities under WI Law, Buyer Agency, Code of Ethics, Designated Agency, Duties Owed by Brokers, Earnest Money, Email Issues , Email Issues, Fair Housing Law, Forms, Forms Revisions, Listing Protection, Real Estate Condition Report, Residential Listing Contract, Sex Offenders, Termination of Agency Relationships, WB-36
                    </div>
                    <a class="text-decoration-none fw-bold" href="#">View PDF</a>
                </div>
            }
            <p class="text-center">pagination to do</p>
        </div>
    </div>
</div>