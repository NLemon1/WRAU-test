@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var parentPages = Model.Ancestors().Reverse();
}

<nav class="container py-4" aria-label="Breadcrumbs">
    <ul class="list-unstyled mb-0 breadcrumbs">
        @foreach (var parentPage in parentPages)
        {
            <li>
                <a href="@parentPage.Url()">@parentPage.Name</a>
                <svg class="mx-1" width="14" height="14" fill="none" aria-hidden="true">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.05" d="M5.25 10.5 8.75 7l-3.5-3.5" />
                </svg>
            </li>
        }
        <li>
            <span>@Model.Name</span>
        </li>
    </ul>
</nav>