@using WRA.Umbraco.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<CheckoutAccount>

@{
	Layout = "CheckoutStepPage.cshtml";
}

@section aside {
    @Html.Partial("CheckoutSidebar")
}

<div class="js-checkout-sign-in">
    <h2 class="h6 mb-3">Sign In</h2>
    <form>
        <div class="mb-2">
            <label for="checkout-signin-email" class="visually-hidden">Email (required)</label>
            <input id="checkout-signin-email" class="form-control" type="email" required placeholder="Email" />
        </div>
        <div>
            <label for="checkout-signin-password" class="visually-hidden">Password (required)</label>
            <input id="checkout-signin-password" class="form-control" type="password" required placeholder="Password" />
        </div>
        <div class="d-flex flex-column align-items-center justify-content-between flex-sm-row mt-4">
            <a class="btn btn-light px-0" href="@Model.CartPage.Url()">
                <i class="fa fa-chevron-left me-2" width="16" height="16" aria-hidden="true"></i>
                Return to Cart
            </a>
            <div>
                <button class="btn btn-secondary btn-sm js-show-create-account" type="button">Create Account</button>
                <button class="btn btn-primary btn-sm" type="submit">Sign In</button>
            </div>
        </div>
    </form>
</div>

<div class="d-none js-checkout-create-account">
    <h2 class="h6 mb-3">Create Account</h2>
    <form>
        <div class="row g-2">
            <div class="col-12 col-lg-6">
                <label for="checkout-create-account-fname" class="visually-hidden">First Name (required)</label>
                <input id="checkout-create-account-fname" class="form-control" type="text" required placeholder="First Name" />
            </div>
            <div class="col-12 col-lg-6">
                <label for="checkout-create-account-lname" class="visually-hidden">Last Name (required)</label>
                <input id="checkout-create-account-lname" class="form-control" type="text" required placeholder="Last Name" />
            </div>
            <div class="col-12">
                <label for="checkout-create-account-email" class="visually-hidden">Email (required)</label>
                <input id="checkout-create-account-email" class="form-control" type="email" required placeholder="Email" />
            </div>
        </div>
        <div class="d-flex flex-column align-items-center justify-content-between flex-sm-row mt-4">
            <button class="btn btn-light px-0 js-show-sign-in" type="button">
                <i class="fa fa-chevron-left me-2" width="16" height="16" aria-hidden="true"></i>
                Return to Sign In
            </button>
            <button class="btn btn-primary" type="submit">Create Account</button>
        </div>
    </form>
</div>